<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <TextView
            android:id="@+id/resultComp"
            android:text="kokokokkokokoko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/resultDateDep"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:text="kokokokkokokoko"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="33dp" />

        <TextView
            android:id="@+id/resultDateDes"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/resultDateDep"
            android:layout_alignBottom="@+id/resultDateDep"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/resultComp"
            android:text="kokokokkokokoko"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="63dp" />

        <TextView
            android:id="@+id/resultPrice"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/resultComp"
            android:text="kokokokkokokoko" />



    </RelativeLayout>


</RelativeLayout>